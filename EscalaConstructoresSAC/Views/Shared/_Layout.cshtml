<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Escala Constructores SAC - @ViewBag.Title</title>

    @Styles.Render("~/maincss");
    @Styles.Render("~/datatables");
    @Styles.Render("~/flatpickr");
    @{
        string NombreDelUsuario = EscalaConstructoresSAC.Controllers.AccesoController.Nombreusuario;
        if (EscalaConstructoresSAC.Controllers.AccesoController.Nombreusuario== null)
        {
            NombreDelUsuario = "Invitado";
        }
    }
</head>

<body class="with-side-menu theme-picton-blue-white-ebony control-panel control-panel-compact">

    <header class="site-header">
        <div class="container-fluid">
            <a href="@Url.Action("Index", "Home")" class="site-logo">
                <img class="hidden-md-down" src="~/img/logo-2-white-inverse.png" alt="">
                <img class="hidden-lg-up" src="~/img/logo-2-mob-inverse.png" alt="">
            </a>
            <button class="hamburger hamburger--htla">
                <span>toggle menu</span>
            </button>
            <div class="site-header-content">
                <div class="site-header-content-in">
                    <div class="site-header-shown">

                        <div class="dropdown user-menu">
                            <button class="dropdown-toggle" id="dd-user-menu" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="~/img/avatar-2-64.png" alt="">
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dd-user-menu">
                                <a class="dropdown-item"><span class="font-icon glyphicon glyphicon-user"></span>@@@NombreDelUsuario</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("IniciarSesion","Acceso")"><span class="font-icon glyphicon glyphicon-log-out"></span>Cerrar Sesión</a>
                            </div>
                        </div>
                    </div><!--.site-header-shown-->
                </div><!--site-header-content-in-->
            </div><!--.site-header-content-->
        </div><!--.container-fluid-->
    </header><!--.site-header-->

    <div class="mobile-menu-left-overlay"></div>
    <nav class="side-menu">
        <ul class="side-menu-list">

            <li class="magenta opened">
                <a href="@Url.Action("Index", "Home")">
                    <span class="fa fa-home"></span>
                    <span class="lbl">Inicio</span>
                </a>
            </li>

            <li class="blue-dirty">
                <a href="@Url.Action("ListaUsuarios", "Usuario")">
                    <span class="fa fa-users"></span>
                    <span class="lbl">Usuarios</span>
                </a>
            </li>

            <li class="pink-red">
                <a href="@Url.Action("ListaResidentes", "Residente")">
                    <span class="fa fa-male"></span>
                    <span class="lbl">Residentes</span>
                </a>
            </li>

            <li class="brown with-sub">
                <span>
                    <i class="fa fa-building"></i>
                    <span class="lbl">Programación de Obras</span>
                </span>
                <ul>
                    <li><a href="@Url.Action("ListaObras", "Obra")"><span class="lbl">Obras</span></a></li>
                    <li><a href="@Url.Action("ListaSeleccionarObra", "Programa")"><span class="lbl">Programas</span></a></li>
                    <li><a href="@Url.Action("ListaActividades", "Actividad")"><span class="lbl">Actividades</span></a></li>
                    <li><a href="@Url.Action("ListaTareas", "Tarea")"><span class="lbl">Tareas</span></a></li>
                </ul>
            </li>

            <li class="yellow with-sub">
                <span>
                    <i class="fa fa-list-alt"></i>
                    <span class="lbl">Reportes</span>
                </span>
                <ul>
                    <li><a href="@Url.Action("ListaTotalObras", "Reportar")"><span class="lbl">Reportar Obras</span></a></li>
                    <li><a href="@Url.Action("ListaTotalActividades", "Reportar")"><span class="lbl">Reportar Actividades</span></a></li>
                </ul>
            </li>

        </ul>
    </nav><!--.side-menu-->

    <div class="page-content">

        @RenderBody()

    </div><!--.page-content-->

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/tether")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/plugins")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/matchHeight")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>