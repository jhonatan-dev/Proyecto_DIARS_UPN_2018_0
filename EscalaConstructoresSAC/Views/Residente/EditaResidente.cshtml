@model CapaEntidad.entResidente

@{
    ViewBag.Title = "Editar Residente";
}

<div class="container-fluid">
    <header class="section-header">
        <div class="tbl">
            <div class="tbl-row">
                <div class="tbl-cell">
                    <h3>@ViewBag.Title</h3>
                    <ol class="breadcrumb breadcrumb-simple">
                        <li><a href="@Url.Action("ListaResidentes", "Residente")">Residentes</a></li>
                        <li class="active">@Model.Nombresresidente</li>
                    </ol>
                </div>
            </div>
        </div>
    </header>

    <div class="box-typical box-typical-padding">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <fieldset class="form-group">
                <label class="form-label">Nombre del residente</label>
                @Html.EditorFor(model => model.Nombresresidente, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombresresidente, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="form-group">
                <label class="form-label">Apellidos del residente</label>
                @Html.EditorFor(model => model.Apellidosresidente, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellidosresidente, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="form-group">
                <label class="form-label">Dirección domiciliaria del residente</label>
                @Html.EditorFor(model => model.Direccionresidente, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Direccionresidente, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="form-group">
                <label class="form-label">Teléfono del residente</label>
                @Html.EditorFor(model => model.Telefonoresidente, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Telefonoresidente, "", new { @class = "text-danger" })
            </fieldset>
            <fieldset class="form-group">
                <button type="submit" class="btn btn-block">Guardar Residente</button>
            </fieldset>
        }
    </div>
</div><!--.container-fluid-->

<div>
    @Html.ActionLink("Regresar a la lista", "ListaResidentes")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
